<div class="board">
    <form id="todo-form" action="/create" method="POST">
        <input type="text" name="title" placeholder="New TODO..." id="todo-input">
        <button type="submit">Add +
        </button>
    </form>


    <div class="lanes">
        <div class="swim-lane" id="todo-lane" data-status="todo">
            <h3 class="heading">TODO</h3>

            {{#if tasks.todo.length}}

            {{#each tasks.todo}}
            <p class="task" draggable="true" data-taskid={{_id}}>{{title}} <i class="bi bi-trash3 delete-icon"
                    data-taskid={{_id}}></i></p>
            {{/each}}
            {{/if}}
            <p class="no-tasks">
                {{#unless tasks.todo.length}}
                There are no tasks here.
                {{/unless}}
            </p>

        </div>

        <div class="swim-lane" id="doing-lane" data-status="doing">
            <h3 class="heading">DOING</h3>

            {{#if tasks.doing.length}}

            {{#each tasks.doing}}
            <p class="task" draggable="true" data-taskid={{_id}}>{{title}} <i class="bi bi-trash3 delete-icon"
                    data-taskid={{_id}}></i></p>
            {{/each}}

            {{/if}}
            <p class="no-tasks">
                {{#unless tasks.doing.length}}
                There are no tasks here.
                {{/unless}}
            </p>


        </div>

        <div class="swim-lane" id="done-lane" data-status="done">
            <h3 class="heading">DONE</h3>

            {{#if tasks.done.length}}

            {{#each tasks.done}}
            <p class="task" draggable="true" data-taskid={{_id}}>{{title}} <i class="bi bi-trash3 delete-icon"
                    data-taskid={{_id}}></i></p>
            {{/each}}
            {{/if}}
            <p class="no-tasks">
                {{#unless tasks.done.length}}
                There are no tasks here.
                {{/unless}}
            </p>


        </div>

    </div>
</div>
